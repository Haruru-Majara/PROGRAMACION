package Ejercicios_Fechas;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.time.format.DateTimeParseException;
import java.util.Scanner;

public class ejercicio6 {

	public static void main(String[] args) {
		// Programa que lea tu fecha de nacimiento y diga el día de la semana (lunes, martes, miércoles...).
		
		LocalDate cumple=null;
		
		boolean correcto=false;
		
		DateTimeFormatter patron = DateTimeFormatter.ofPattern("dd/LL/yyyy");
		
		Scanner sc=new Scanner (System.in);
		
		do {
			System.out.println("Introduce fecha con formato dd/MM/yyyy");
			String cumpleS=sc.nextLine();
			
			try {
				cumple=LocalDate.parse(cumpleS,patron);
				correcto=true;
			} catch (DateTimeParseException e) {
				System.out.println("Formato de fecha no valido");
			}
		
		}while(!correcto);
		
	}

}
